
<div class="container">
  <%= render 'shared/navbar' %>
</div>
<div class="banner d-flex align-items-center">
  <iframe width="560" height="315" src="https://www.youtube.com/embed/wBjhMcLNVtU?controls=0?enablejsapi=1" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen id="video"></iframe>
  <div class="row banner-content">
    <div class="col-2 align-items-center">
      <%= image_tag "pictobanner.png", class:"row pictobanner" %>
      <div class="row video-controls" data-controller="yt">
        <button class="col mute-video" data-action="click->yt#changeMute">
          <i class="fa fa-volume-up" data-yt-target="soundOn"></i>
          <i class="fa-solid fa-volume-off d-none" data-yt-target="soundOff"></i>
        </button>
        <a href ="#" class="col play-control" data-action="click->yt#changeIcon" id="video">
          <i class="fa fa-play" data-yt-target="play" id="play-button"></i>
          <i class="fa-solid fa-pause d-none" data-yt-target="pause" id="pause-button"></i>
        </a>
      </div>
    </div>
    <div class="col-8 banner-text">
      <div class="row">
        <span class="p1">BROWNBRO VOUS ACCOMPAGNE</span><br>
        <span>TOUT AU LONG DE VOTRE PROJET</span>
      </div>
    </div>
    <div class="col-2 mouse-button on-right">
      <span>Scroll down</span>
    </div>
  </div>
</div>
