<div class="container">
  <%= render 'shared/navbar' %>
  <div class="header-show">
    <div class="post-date">
      <%= @project.created_at.strftime("%B %d, %Y") %>
    </div>
    <h3><%= @project.title.upcase %></h3>
  </div>

  <div class="container project-description">
    <% if @project.description != nil %>
      <%= @project.description %>
    <% end %>
  </div>
  <div class="container project-video">
    <iframe style="width:100%; height:50vw" src="<%= @project.video_url%>" frameborder="0" allowfullscreen=""></iframe>
  </div>
</div>
